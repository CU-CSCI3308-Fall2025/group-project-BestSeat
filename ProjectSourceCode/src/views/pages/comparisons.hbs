{{> navbar}}
{{> message}}

<div class="container mt-4">
    <div>
        <h2>{{eventName}}{{#unless eventName}}Event{{/unless}}</h2>
        <p>
            {{#if eventDate}}<strong>Date:</strong> {{eventDate}} | {{else}}<strong>Date:</strong> Date | {{/if}}
            {{#if eventLocation}}<strong>Location:</strong> {{eventLocation}}{{else}}<strong>Location:</strong> Location {{/if}}
        </p>
    </div>
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ticketmaster</h5>
                    <p><strong>Price:</strong> ${{ticketmaster.price}}</p>
                    <p><strong>Seat Location:</strong> {{ticketmaster.seatLocation}}</p>
                    <p><strong>Link:</strong> <a href="{{ticketmaster.link}}" target="_blank">{{ticketmaster.link}}</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-body">
