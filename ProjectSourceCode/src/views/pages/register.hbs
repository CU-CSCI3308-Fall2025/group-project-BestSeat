{{> title}}
<div class="hero-section text-center py-5 bg-primary text-white mb-4">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">BestSeat</h1>
        <p class="lead mb-4">Find seats for your favorite events and compare prices effortlessly.</p>
    </div>
</div>

<div class="d-flex justify-content-center">
    <div class="card shadow-sm w-100" style="max-width: 480px;">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">Register</h1>
            {{> message}}
            <form action="/register" method="POST" class="text-start">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email"
                        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Please enter a valid email address"
                        required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
                <p class="text-center mt-3">Already have an account? <a href="/login">Login</a>.</p>
        </div>
    </div>
</div>
 